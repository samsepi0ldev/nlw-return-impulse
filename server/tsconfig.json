{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                                
    "rootDirs": ["src", "tests"],                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                      
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [".../tests/*"],
      "@/*": ["*"]
    }                   
  },
  "include": ["src"],
  "exclude": [],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
